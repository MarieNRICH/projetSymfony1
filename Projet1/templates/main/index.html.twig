{% extends 'base.html.twig' %}

{% block title %}Projet 1!
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h1>{{ controller_name }}! ✅</h1>
	</div>

	<!-- Main Content-->
	<main class="container-fluid">
		<div class="row gx-4 gx-lg-5 justify-content-center">
			<div
				class="col-md-10 col-lg-8 col-xl-7">
				<!-- On boucle sur la variable data pour afficher les articles -->
				{% for article in articles %}
					<!-- Post preview-->
					<div class="post-preview">
						<img src="{{ asset('uploads/images/' ~ article.image) }}" width="100" alt="tba" class="img">
						<h2 class="post-title">{{ article.title }}</h2>
						<p>{{ article.content|raw }}</p>
					</a>
					<p class="post-meta">
						Posted by
						<a href="">Start Bootstrap</a>
					</p>
				{% else %}
					<p>no records found</p>
				{% endfor %}
			</div>
			<!-- Divider-->
			<hr class="my-4"/>
			<section class="container-fluid">
				<div class="row">
					{% for article in articles %}
						<div class="col-md-4">
							<div class="card" style="width: 18rem;">
								<img src="{{ asset('uploads/images/' ~ article.image) }}" class="card-img-top" alt="Lorem Piscum">
								<div class="card-body">
									<h5 class="card-title">{{ article.title }}</h5>
									<p class="card-text">
										{{ article.content|raw }}
									</p>
									<a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
									<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
								</div>
							</div>
						</div>
					{% else %}
						<p>no records found</p>
					{% endfor %}
				</div>
			</section>
			<!-- Pager-->
			<div class="d-flex justify-content-end mb-4">
				<a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a>
			</div>
		</div>
	</div>
</main>{% endblock %}
