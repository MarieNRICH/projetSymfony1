{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td><img src="{{ asset('uploads/images/' ~ article.image) }}" width="100" alt="" class="img-fluid"></td>
                <td>{{ article.content|raw }}</td>
                <td>
                    <button class="container-fluid"><a href="{{ path('app_article_show', {'id': article.id}) }}">show</a></button>
                    <button class="container-fluid"><a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
